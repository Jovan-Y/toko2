<Window x:Class="InventoryManager.UserManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manajemen Pengguna" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="UsersListView" Grid.Column="0" SelectionChanged="UsersListView_SelectionChanged" DisplayMemberPath="Username"/>

        <StackPanel Grid.Column="1" Margin="10,0,0,0" x:Name="UserDetailPanel" IsEnabled="False">
            <Label Content="Nama Lengkap:"/>
            <TextBox x:Name="FullNameTextBox"/>
            <Label Content="Username:"/>
            <TextBox x:Name="UsernameTextBox"/>
            <Label Content="Password (kosongkan jika tidak diubah):"/>
            <PasswordBox x:Name="PasswordBox"/>
            <Label Content="Peran (Role):"/>
            <ComboBox x:Name="RoleComboBox">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Kasir"/>
            </ComboBox>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="SaveButton" Content="Simpan" Click="SaveButton_Click"/>
                <Button x:Name="NewButton" Content="Baru" Margin="5,0,0,0" Click="NewButton_Click"/>
                <Button x:Name="DeleteButton" Content="Hapus" Margin="5,0,0,0" Click="DeleteButton_Click" Foreground="Red"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

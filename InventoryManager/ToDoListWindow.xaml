<Window x:Class="InventoryManager.ToDoListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManager"
        mc:Ignorable="d"
        Title="Daftar Tugas (To-Do List)" Height="500" Width="900" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <Button x:Name="RefreshButton" DockPanel.Dock="Top" Content="🔄 Refresh Data" Margin="0,0,0,10" Click="RefreshButton_Click"/>
        <ListView x:Name="ToDoListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Produk" DisplayMemberBinding="{Binding ProductName}" Width="250"/>
                    <GridViewColumn Header="Tipe Tugas" DisplayMemberBinding="{Binding TaskType}" Width="100"/>
                    <GridViewColumn Header="Deskripsi" DisplayMemberBinding="{Binding Description}" Width="350"/>
                    <GridViewColumn Header="Tgl Dibuat" DisplayMemberBinding="{Binding CreatedAt, StringFormat='dd-MM-yyyy HH:mm'}" Width="120"/>
                    <GridViewColumn Header="Aksi" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Selesai" CommandParameter="{Binding ToDoID}" Click="CompleteButton_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>

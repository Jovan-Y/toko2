<Window x:Class="InventoryManager.DataAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManager"
        mc:Ignorable="d"
        Title="Analisis Data Inventaris" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <Button x:Name="RefreshButton" DockPanel.Dock="Top" Content="🔄 Refresh Data" Margin="0,0,0,10" Click="RefreshButton_Click"/>
        <TabControl>
            <TabItem Header="Produk Tanpa Satuan">
                <ListView x:Name="NoUnitsListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID Produk" DisplayMemberBinding="{Binding ProductId}" Width="100"/>
                            <GridViewColumn Header="Nama Produk" DisplayMemberBinding="{Binding ProductName}" Width="650"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Satuan Tanpa Barcode">
                <ListView x:Name="NoBarcodeListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nama Produk" DisplayMemberBinding="{Binding ProductName}" Width="370"/>
                            <GridViewColumn Header="Nama Satuan" DisplayMemberBinding="{Binding UnitName}" Width="370"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Barcode Duplikat">
                <ListView x:Name="DuplicateBarcodeListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Barcode" DisplayMemberBinding="{Binding Barcode}" Width="150"/>
                            <GridViewColumn Header="Nama Produk" DisplayMemberBinding="{Binding ProductName}" Width="300"/>
                            <GridViewColumn Header="Nama Satuan" DisplayMemberBinding="{Binding UnitName}" Width="300"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Produk Tanpa Harga Jual">
                <ListView x:Name="NoPriceListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nama Produk" DisplayMemberBinding="{Binding ProductName}" Width="370"/>
                            <GridViewColumn Header="Nama Satuan" DisplayMemberBinding="{Binding UnitName}" Width="370"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>

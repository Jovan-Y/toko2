<Window x:Class="InventoryManager.PriceLabelPrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManager"
        mc:Ignorable="d"
        Title="Cetak Label Harga" Height="720" Width="1280" WindowStartupLocation="CenterOwner"
        Background="#F0F2F5">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="Pilih Produk">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Margin="5">
                        <Button x:Name="RefreshProductsButton" Content="🔄" DockPanel.Dock="Right" Click="RefreshProductsButton_Click" Width="30"/>
                        <TextBox x:Name="SearchProductTextBox" TextChanged="SearchProductTextBox_TextChanged"/>
                    </DockPanel>
                    <ListView x:Name="ProductsListView" Margin="5" ItemsSource="{Binding ProductsList}" SelectionChanged="ProductsListView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nama Produk" DisplayMemberBinding="{Binding ProductName}" Width="250"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Pilih Satuan untuk Dicetak" Margin="0,10,0,0">
                <ListView x:Name="UnitsToPrintListView" ItemsSource="{Binding UnitsForSelectedProduct}" Height="150">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayName}" IsChecked="{Binding IsSelected}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>

            <Button Grid.Row="2" x:Name="AddItemButton" Content="Tambahkan ke Antrian" Margin="0,10,0,0" Click="AddItemButton_Click"/>
        </Grid>

        <StackPanel Grid.Column="1" Margin="0,0,10,0">
            <GroupBox Header="Pengaturan Cetak">
                <StackPanel>
                    <Label Content="Ukuran Kertas (mm):"/>
                    <ComboBox x:Name="PaperSizeComboBox" SelectionChanged="Settings_Changed"/>
                    <Expander Header="Tambah Ukuran Kertas Kustom" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="PaperWidthTextBox" ToolTip="Lebar (mm)"/>
                            <TextBox x:Name="PaperHeightTextBox" Grid.Column="1" ToolTip="Tinggi (mm)" Margin="5,0"/>
                            <Button x:Name="AddPaperSizeButton" Grid.Column="2" Content="➕" Width="25" Click="AddPaperSizeButton_Click"/>
                        </Grid>
                    </Expander>

                    <Label Content="Ukuran Label (mm):" Margin="0,10,0,0"/>
                    <ComboBox x:Name="LabelSizeComboBox" SelectionChanged="Settings_Changed"/>
                    <Expander Header="Tambah Ukuran Label Kustom" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="LabelWidthTextBox" ToolTip="Lebar (mm)"/>
                            <TextBox x:Name="LabelHeightTextBox" Grid.Column="1" ToolTip="Tinggi (mm)" Margin="5,0"/>
                            <Button x:Name="AddLabelSizeButton" Grid.Column="2" Content="➕" Width="25" Click="AddLabelSizeButton_Click"/>
                        </Grid>
                    </Expander>

                    <Label Content="Margin Kertas (mm):" Margin="0,10,0,0"/>
                    <TextBox x:Name="MarginTextBox" Text="2" TextChanged="Settings_Changed"/>
                    <Label Content="Ukuran Font Nama:" Margin="0,5,0,0"/>
                    <TextBox x:Name="ProductNameFontSizeTextBox" Text="12" TextChanged="Settings_Changed"/>
                    <Label Content="Ukuran Font Harga:" Margin="0,5,0,0"/>
                    <TextBox x:Name="PriceFontSizeTextBox" Text="14" TextChanged="Settings_Changed"/>
                    <Separator Margin="0,10"/>
                    <TextBlock x:Name="FitInfoTextBlock" TextWrapping="Wrap" FontWeight="Bold" Text="Kalkulasi: -"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="{Binding PrintQueueTitle}" Margin="0,10,0,0">
                <DataGrid x:Name="PrintQueueDataGrid" ItemsSource="{Binding PrintQueue}" AutoGenerateColumns="False" CanUserAddRows="False" Height="150">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item" Binding="{Binding DisplayName}" Width="*" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Jumlah">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}" Width="40" TextChanged="Copies_TextChanged"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Hapus" Click="RemoveItemButton_Click" Background="IndianRed" Foreground="White" Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <Button x:Name="PrintButton" Content="Cetak" Margin="0,10,0,0" Height="30" Background="DodgerBlue" Foreground="White" Click="PrintButton_Click"/>
        </StackPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <GroupBox Header="Pratinjau Cetak" Grid.Row="0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Border BorderBrush="Gray" BorderThickness="1" Background="White"
                            x:Name="PaperPreviewBorder" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Canvas x:Name="PreviewCanvas"/>
                    </Border>
                </ScrollViewer>
            </GroupBox>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button x:Name="PreviousPageButton" Content="&lt; Sebelumnya" Click="PreviousPageButton_Click"/>
                <TextBlock x:Name="PageInfoTextBlock" Text="Halaman 1 dari 1" VerticalAlignment="Center" Margin="10,0"/>
                <Button x:Name="NextPageButton" Content="Berikutnya &gt;" Click="NextPageButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>